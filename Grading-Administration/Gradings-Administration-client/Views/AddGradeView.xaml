<Page x:Class="Gradings_Administration_client.Views.AddGradeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gradings_Administration_client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="AddGradeView">

    <Grid Background="White">
        <TextBox HorizontalAlignment="Left" Margin="87,58,0,0" Text="{Binding GradeText}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="127,109,0,0" VerticalAlignment="Top" Command="{Binding AddGrade}"/>
        <Label Content="Geen juiste waarde" HorizontalAlignment="Left" Margin="92,76,0,0" VerticalAlignment="Top" Foreground="Red" Opacity="{Binding ErrorOpacity}"/>

    </Grid>
</Page>
